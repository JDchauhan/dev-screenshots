<% include partials/header.ejs %>
<script src="/js/login.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light navbar-fixed-top" id="mainNav">
        <div class="container">

            <!-- Brand/logo -->
            <a class="navbar-brand" href="https://www.hexerve.com" target="_blank">
                <figure class="figure">
                    <img src="/hexerve-logo.png" alt="Hexerve">
                    <figcaption class="figure-caption">Screenshot Taker</figcaption>
                </figure>
            </a>

            <!-- Toggler/collapsibe Button -->
            <button class="navbar-dark navbar-toggler" id="nav-toggler" type="button" data-toggle="collapse"
                data-target=".collapsibleNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse collapsibleNavbar">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item white">
                        <a class="nav-link white" href="https://www.hexerve.com"><b>Main Website</b></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link white" href="./dashboard"><b>Home</b></a>
                    </li>
                    <li class="nav-item white">
                        <a class="nav-link white" href="https://www.hexerve.com/contact" target="_blank"><b>Contact</b></a>
                    </li>
                </ul>
            </div>

        </div>
    </nav>

    <div id="loader" class="container row">
        <img class="hexerve" src="/hexerve.png" />
    </div>

    <div class="fixed-top body-container body-top-container container">
        <div class="row login-row">
            <!--Description-->
            <div class="col-md-6">

            </div>

            <!--Login-->
            <div class="col-md-6 login">
                <div id="login-msg"></div>
                <form>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Email</span>
                        </div>
                        <input type="text" class="form-control" name="email" id="email" placeholder="example@gmail.com">
                    </div>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Password</span>
                        </div>
                        <input type="password" class="form-control" name="pass" id="pass" placeholder="password">
                    </div>
                    <div class="container font-weight-bold lead height-30">
                        <span class="pull-left">
                            <a class="resend_link" id="resend_link">Resend Link</a>
                        </span>
                        <span class="pull-right">
                            <a href="./password/forget">Forget Password</a>
                        </span>
                    </div>

                    <div class="wrapper text-center">
                        <div class="btn-group btn-group-lg">
                            <button type="button" id="login-btn" class="btn wobble-vertical">Login</button>
                            <button type="button" id="register" class="btn wobble-vertical">Register</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Register -->
            <div class="col-md-6 register" style="display: none;">
                <div id="register-msg"></div>
                <form>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Name</span>
                        </div>
                        <input type="text" class="form-control" name="name" id="name" placeholder="example">
                    </div>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Email</span>
                        </div>
                        <input type="text" class="form-control" name="email" id="email1" placeholder="example@gmail.com">
                    </div>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Mobile</span>
                        </div>
                        <input type="text" class="form-control" name="mobile" id="mobile" placeholder="+1 800 274 0561">
                    </div>
                    <div class="input-group mb-3 input-group-lg container">
                        <div class="input-group-prepend">
                            <span class="input-group-text">Password</span>
                        </div>
                        <input type="password" class="form-control" name="pass" id="pass1" placeholder="password">
                    </div>
                    <div class="wrapper text-center">
                        <div class="btn-group btn-group-lg">
                            <button type="button" id="login" class="btn wobble-vertical">Login</button>
                            <button type="button" id="register-btn" class="btn wobble-vertical">Register</button>
                        </div>
                    </div>
                </form>

            </div>
        </div>

    </div>

    <% if(message) { %>
    <% if(message === "verified") { %>
    <script>
        $('#login-msg').append(
            '<div class="alert alert-success alert-dismissible fade show">' +
            '<button type="button" class="close" data-dismiss="alert">&times;</button>' +
            '<strong>Congratulation! </strong> Verification Successful.' +
            '</div>'
        );
    </script>
    <% } %>

    <% } %>

    <footer class="footer fixed-bottom fill-content bg-dark text-light">
        <% include partials/footer.ejs %>
</body>

</html>